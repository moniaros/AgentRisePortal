[
  {
    "id": "PR-001",
    "name": "30-Day Payment Due Reminder",
    "description": "Creates a task for the agent 30 days before a payment is due.",
    "category": "PAYMENT_REMINDER",
    "trigger": {
      "eventType": "PAYMENT_DUE_IN_30_DAYS"
    },
    "conditions": [
      {
        "field": "policy.paymentStatus",
        "operator": "EQUALS",
        "value": "pending"
      }
    ],
    "actions": [
      {
        "actionType": "CREATE_TASK",
        "target": "AGENT",
        "templateId": "payment-due-30-day-task"
      }
    ],
    "priority": 100,
    "isEnabled": true,
    "agencyId": "global"
  },
  {
    "id": "PR-002",
    "name": "7-Day Payment Due Email Reminder",
    "description": "Sends an email to the customer 7 days before a payment is due.",
    "category": "PAYMENT_REMINDER",
    "trigger": {
      "eventType": "PAYMENT_DUE_IN_7_DAYS"
    },
    "conditions": [
       {
        "field": "policy.paymentStatus",
        "operator": "EQUALS",
        "value": "pending"
      }
    ],
    "actions": [
      {
        "actionType": "SEND_EMAIL",
        "target": "CUSTOMER",
        "parameters": {
          "templateId": "payment-due-upcoming"
        }
      }
    ],
    "priority": 90,
    "isEnabled": true,
    "agencyId": "global"
  },
