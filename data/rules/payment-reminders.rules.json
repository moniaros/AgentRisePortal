  {
    "id": "PR-004",
    "name": "3-Day Overdue Email & SMS Reminder",
    "description": "Creates a task, sends an email, and sends an SMS when a payment is 3 days overdue.",
    "category": "PAYMENT_REMINDER",
    "trigger": {
      "eventType": "PAYMENT_OVERDUE_3_DAYS"
    },
    "conditions": [
      {
        "field": "policy.paymentStatus",
        "operator": "EQUALS",
        "value": "overdue"
      }
    ],
    "actions": [
      {
        "actionType": "CREATE_TASK",
        "target": "AGENT",
        "templateId": "payment-overdue-task"
      },
      {
        "actionType": "SEND_EMAIL",
        "target": "CUSTOMER",
        "parameters": {
          "templateId": "payment-overdue-urgent"
        }
      },
      {
        "actionType": "SEND_SMS",
        "target": "CUSTOMER",
        "parameters": {
          "templateId": "payment-overdue-sms"
        }
      }
    ],
    "priority": 200,
    "isEnabled": true,
    "agencyId": "global"
  }
