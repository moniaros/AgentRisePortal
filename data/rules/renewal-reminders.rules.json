
[
  {
    "id": "RR-001",
    "name": "30-Day Auto Policy Renewal Reminder",
    "description": "Creates a task for the agent and sends an email to the customer 30 days before an 'auto' policy expires.",
    "category": "RENEWAL_REMINDER",
    "trigger": {
      "eventType": "POLICY_EXPIRING_SOON",
      "parameters": {
        "daysBefore": 30
      }
    },
    "conditions": [
      {
        "field": "policy.type",
        "operator": "EQUALS",
        "value": "auto"
      },
      {
        "field": "policy.isActive",
        "operator": "EQUALS",
        "value": true
      }
    ],
    "actions": [
      {
        "actionType": "CREATE_TASK",
        "target": "AGENT",
        "template": "Follow up with {customer.firstName} {customer.lastName} to discuss renewal for auto policy {policy.policyNumber}, expiring on {policy.endDate}."
      },
      {
        "actionType": "SEND_EMAIL",
        "target": "CUSTOMER",
        "parameters": {
          "templateId": "renewal-30-day-formal"
        }
      }
    ],
    "priority": 100,
    "isEnabled": true,
    "agencyId": "global"
  },
  {
    "id": "RR-002",
    "name": "15-Day SMS Renewal Reminder",
    "description": "Sends an SMS to the customer 15 days before any policy expires.",
    "category": "RENEWAL_REMINDER",
    "trigger": {
      "eventType": "POLICY_EXPIRING_SOON",
      "parameters": {
        "daysBefore": 15
      }
    },
    "conditions": [
      {
        "field": "policy.isActive",
        "operator": "EQUALS",
        "value": true
      }
    ],
    "actions": [
      {
        "actionType": "SEND_SMS",
        "target": "CUSTOMER",
        "parameters": {
          "templateId": "renewal-15-day-sms"
        }
      }
    ],
    "priority": 90,
    "isEnabled": true,
    "agencyId": "global"
  }
]
