# Production Environment Variables
# Copy this file to .env.production and fill in the values

# ===========================
# Database Configuration
# ===========================
DB_ROOT_PASSWORD=your_strong_root_password_here
DB_NAME=agentrise_db
DB_USER=agentrise_user
DB_PASSWORD=your_strong_database_password_here
DB_HOST=database
DB_PORT=3306

# ===========================
# Backend Configuration
# ===========================
NODE_ENV=production
PORT=5000
API_PREFIX=/api/v1

# ===========================
# JWT Configuration
# ===========================
# Generate strong secrets:
# openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_min_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_32_characters
JWT_REFRESH_EXPIRES_IN=30d

# ===========================
# CORS Configuration
# ===========================
# Your frontend URL
CORS_ORIGIN=https://yourdomain.com

# ===========================
# Frontend Configuration
# ===========================
# Your backend API URL
VITE_API_URL=https://api.yourdomain.com/api/v1
VITE_APP_NAME=AgentRise Insurance Portal
VITE_APP_VERSION=1.0.0
FRONTEND_PORT=80

# ===========================
# File Upload Configuration
# ===========================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# ===========================
# Google Gemini AI (Optional)
# ===========================
GEMINI_API_KEY=your_gemini_api_key

# ===========================
# Google OAuth (Optional)
# ===========================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://api.yourdomain.com/api/v1/auth/google/callback

# ===========================
# Rate Limiting
# ===========================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================
# Social Network OAuth
# ===========================
# Facebook - Get credentials from https://developers.facebook.com/apps
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=https://api.yourdomain.com/api/v1/social/callback/facebook

# Instagram - Uses Facebook OAuth (same credentials as Facebook)
# Get credentials from https://developers.facebook.com/apps

# LinkedIn - Get credentials from https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=https://api.yourdomain.com/api/v1/social/callback/linkedin

# X (Twitter) - Get credentials from https://developer.twitter.com/en/portal/dashboard
X_CLIENT_ID=your_x_client_id
X_CLIENT_SECRET=your_x_client_secret
X_REDIRECT_URI=https://api.yourdomain.com/api/v1/social/callback/x

# TikTok - Get credentials from https://developers.tiktok.com/apps
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_REDIRECT_URI=https://api.yourdomain.com/api/v1/social/callback/tiktok

# YouTube - Get credentials from https://console.cloud.google.com/apis/credentials
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REDIRECT_URI=https://api.yourdomain.com/api/v1/social/callback/youtube

# ===========================
# Email Configuration (Optional)
# ===========================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password

# ===========================
# Logging
# ===========================
LOG_LEVEL=info
